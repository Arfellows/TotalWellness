@model IEnumerable<TotalWellness.Models.TeamListItem>

@{
    ViewBag.Title = "Index";
}


<h1>Team Info</h1>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TeamId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeamName)
            </td>
            <td>
                
                @Html.ActionLink("Take Me To My Team", "Details", new { id = item.TeamId }, new { @class = "btn btn-info" })
            </td>
        </tr>
    }

</table>
